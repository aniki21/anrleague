
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">Log in</div>
      <div class="panel-body">
        <%= form_tag login_path, class: "form-horizontal" do %>
          <div class="form-group">
            <%= label_tag :email, "Email", class: "col-md-3 control-label" %>
            <div class="col-md-9">
              <%= text_field_tag :email, "", placeholder:"", class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= label_tag :password, "Password", class: "col-md-3 control-label" %>
            <div class="col-md-9">
              <%= password_field_tag :password, "", placeholder:"", class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-9 col-md-offset-3">
              <%= submit_tag "Log in", class: "btn btn-success" %>
              <%= link_to "Forgot password?", "#", class:"btn btn-link" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
