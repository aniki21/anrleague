<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">Register</div>
      <div class="panel-body">

        <% if @user.errors.any? %>
          <div class="alert alert-danger">
            <ul>
              <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% else %>
          <p>All fields are required, except where specified.</p>
        <% end %>

        <%= form_for @user, url: register_path, html: { class: "form-horizontal" } do |f| %>
          <%= hidden_field_tag :path, params[:path] %>
          <div class="form-group">
            <%= f.label :email, "Email", class: "col-md-4 control-label" %>
            <div class="col-md-8">
              <%= f.text_field :email, placeholder:"", class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password, "Password", class: "col-md-4 control-label" %>
            <div class="col-md-8">
              <%= f.password_field :password, placeholder:"", class: "form-control" %>
              <small class="help-block">Passwords must contain at least one upper- and lower-case letter, and at least one number</small>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, "Confirm Password", class: "col-md-4 control-label" %>
            <div class="col-md-8">
              <%= f.password_field :password_confirmation, placeholder:"", class: "form-control" %>
            </div>
          </div>


          <div class="form-group">
            <%= f.label :display_name, "Display name", class: "col-md-4 control-label" %>
            <div class="col-md-8">
              <%= f.text_field :display_name, placeholder:"", class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :jinteki_username, "Jinteki.net username", class: "col-md-4 control-label" %>
            <div class="col-md-8">
              <%= f.text_field :jinteki_username, placeholder:"Optional", class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-8 col-md-offset-4">
              <%= render partial: "shared/recaptcha" %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-8 col-md-offset-4">
              <%= f.submit "Register", class: "btn btn-success" %>
              <%= link_to "Log in", login_path, class: "btn btn-link" %>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
