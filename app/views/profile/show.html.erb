<h1>
  <%= gravatar_image_tag(@user.email, :class => 'img-rounded', :gravatar => { :size => 50, :rating => "g" }) %>
  <%= @user.display_name %>
  <% unless @user.display_name == @user.jinteki_username %>
    <small><%= @user.jinteki_username %></small>
  <% end %>
</h1>

<% if @user.id == current_user.id %>
  <p><%= link_to "Edit profile", edit_profile_path, class: "btn btn-default" %></p>
<% end %>

<div class="row">
  <div class="col-md-6">
    <h3>League Memberships</h3>
    <% if @user.leagues.any? %>
      <% @user.leagues.each do |league| %>
        <%= render partial: "leagues/short", locals: { league: league } %>
      <% end %>
    <% else %>
      <p><%= @own_profile ? "You have" : "This user has" %>n't joined any leagues yet.</p>
    <% end %>
  </div>

  <% if @user.owned_leagues.any? %>
    <div class="col-md-6">
      <h3>Owner of</h3>
      <% @user.owned_leagues.each do |league| %>
        <%= render partial: "leagues/short", locals: { league: league } %>
      <% end %>
    </div>
  <% end %>
</div>

<p>Not sure what other profile information should go here</p>
