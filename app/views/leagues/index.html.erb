<h1>Leagues</h1>

<% @leagues.each do |league| %>
  <h3>
    <%= link_to league.display_name, show_league_path(league.id,league.slug) %>
    <% if league.offline? && !league.offline_location.blank? %><small><%= league.offline_location %></small><% end %>
  </h3>
  <%= (league.description_html || "").html_safe %>
<% end %>
